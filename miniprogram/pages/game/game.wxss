/* pages/game/game.wxss */
.game-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  padding: 20rpx;
}

/* 顶部信息栏 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.room-info {
  display: flex;
  align-items: center;
}

.room-code {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.timer {
  background-color: var(--danger-color);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.timer-text {
  color: white;
  font-weight: bold;
  font-size: 32rpx;
}

/* 对手区域 */
.opponent-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.player-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.player-name {
  font-size: 28rpx;
  color: var(--text-primary);
}

.card-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background-color: var(--bg-secondary);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.card-emoji {
  font-size: 24rpx;
}

.card-number {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.opponent-cards {
  display: flex;
  gap: -20rpx;
}

.card-back {
  width: 80rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.card-back-emoji {
  font-size: 32rpx;
}

/* 中央牌桌 */
.center-table {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.table-cards {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.game-card {
  width: 140rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.game-card.selected {
  transform: translateY(-20rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.5);
}

.game-card.selected::after {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  background: linear-gradient(135deg, #50e3c2 0%, #4a90e2 100%);
  border-radius: 12rpx;
  z-index: -1;
}

.card-value {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
}

/* 游戏状态提示 */
.game-status {
  margin: 20rpx 0;
}

.status-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 抢答按钮 */
.claim-button {
  font-size: 36rpx;
  padding: 30rpx 60rpx;
  margin-top: 40rpx;
}

/* 解答界面 */
.solution-builder {
  width: 100%;
  max-width: 600rpx;
}

.solution-steps {
  background-color: var(--bg-secondary);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  min-height: 150rpx;
}

.solution-step {
  padding: 10rpx 0;
}

.step-text {
  font-size: 32rpx;
  color: var(--text-primary);
  font-family: monospace;
}

.operation-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  margin-bottom: 30rpx;
}

.op-button {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 48rpx;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.op-button:active {
  background-color: var(--primary-color);
  transform: scale(0.95);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

/* 玩家区域 */
.player-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.player-cards {
  display: flex;
  gap: 10rpx;
}

.player-card {
  width: 100rpx;
  height: 140rpx;
  font-size: 36rpx;
}

/* 游戏结束界面 */
.game-over-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.game-over-card {
  text-align: center;
  padding: 60rpx;
  max-width: 600rpx;
}

.game-over-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.game-over-message {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  display: block;
}

.game-over-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}