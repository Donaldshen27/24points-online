/* pages/waiting/waiting.wxss */
.waiting-container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
}

.waiting-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.waiting-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  display: block;
  margin-bottom: 40rpx;
}

.room-info-card {
  display: inline-block;
  padding: 40rpx 60rpx;
}

.room-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 20rpx;
}

.room-code-large {
  font-size: 72rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 8rpx;
  display: block;
  margin-bottom: 30rpx;
}

.copy-btn {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
}

/* 玩家区域 */
.players-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 60rpx;
  margin: 80rpx 0;
}

.player-slot {
  text-align: center;
  position: relative;
}

.player-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: var(--bg-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 4rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.player-slot.occupied .player-avatar {
  border-color: var(--primary-color);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.empty-slot-icon {
  font-size: 80rpx;
  color: var(--text-secondary);
}

.player-name {
  font-size: 32rpx;
  color: var(--text-primary);
  display: block;
  margin-bottom: 10rpx;
}

.ready-badge {
  position: absolute;
  top: 130rpx;
  right: 0;
  background-color: var(--success-color);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.ready-badge text {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

.vs-divider {
  display: flex;
  align-items: center;
  justify-content: center;
}

.vs-text {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-secondary);
}

/* 游戏设置 */
.game-settings {
  margin-bottom: 60rpx;
}

.settings-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
  margin-bottom: 30rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.setting-label {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.setting-value {
  font-size: 32rpx;
  color: var(--text-primary);
  padding: 16rpx 32rpx;
  background-color: var(--bg-primary);
  border-radius: 8rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  align-items: center;
}

.ready-btn, .start-btn, .leave-btn {
  width: 400rpx;
}

/* 倒计时 */
.countdown-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.countdown-content {
  text-align: center;
}

.countdown-number {
  font-size: 120rpx;
  font-weight: bold;
  color: var(--primary-color);
  display: block;
  margin-bottom: 20rpx;
}

.countdown-text {
  font-size: 36rpx;
  color: var(--text-primary);
}