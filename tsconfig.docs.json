{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "./client/src/**/*",
    "./server/src/**/*",
    "./shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist",
    "**/build"
  ]
}