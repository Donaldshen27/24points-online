{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": false
  },
  "include": [
    "./client/src/**/*",
    "./server/src/**/*",
    "./shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist",
    "**/build",
    "**/premium/**"
  ]
}